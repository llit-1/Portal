<!-- Скрипт для добавления и управления строками в таблице -->
<script>

    function calculateHours() {
        const beginArr = document.querySelectorAll(".timeBeginForJSON");
        const endArr = document.querySelectorAll(".timeEndForJSON");

        let totalMinutes = 0;

        for (let i = 0; i < beginArr.length; i++) {
            const [beginH, beginM] = beginArr[i].value.split(":").map(Number);
            const [endH, endM] = endArr[i].value.split(":").map(Number);

            let startMinutes = beginH * 60 + beginM;
            let finishMinutes = endH * 60 + endM;

            // Если конец меньше начала — значит, это следующий день
            if (finishMinutes <= startMinutes) {
                finishMinutes += 24 * 60;
            }

            totalMinutes += finishMinutes - startMinutes;
        }

        const totalHours = (totalMinutes / 60).toFixed(2);

        // Правильное склонение слова "час"
        const hoursInt = Math.floor(totalHours);
        let endSwitch;
        if (hoursInt % 10 === 1 && hoursInt % 100 !== 11) {
            endSwitch = " час";
        } else if ([2, 3, 4].includes(hoursInt % 10) && ![12, 13, 14].includes(hoursInt % 100)) {
            endSwitch = " часа";
        } else {
            endSwitch = " часов";
        }

        document.getElementById("hours").textContent = `Всего: ${totalHours}${endSwitch}`;
    }


    // Функция для добавления новой строки с данными о сотруднике
    function addRowPeron(data) {
