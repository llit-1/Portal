<!--загрузка таблицы пользователей-->
<script>
    
    function loadTrackingDataTable() {
        try{
            SpinnerShow();
            $('#page').load('/TimeTracking/TrackingdataTable', function () { SpinnerHide(); });

        }
        catch{
            document.getElementById('page').innerHTML = 'Сейчас недоступно'
        }
        
    }
</script>

<script>
    function TrackingDataTable() {
        $('#header').text('Табель');
        $('#back').unbind('click');
        $('#back').click(function () { location.hash = "#staff" });
        $('#tableMenu').show();
        $('#editMenu').hide();
        $('#addMenu').hide();
        $('#page').empty();
        loadTrackingDataTable();
    }
    TrackingDataTable();
</script>

